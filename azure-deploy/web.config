<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- indicates that the server-simple.js file is a node.js application to be handled by the iisnode module -->
    <handlers>
      <add name="iisnode" path="server-simple.js" verb="*" modules="iisnode" />
    </handlers>
    
    <!-- URL rewrite rules to redirect all requests to server-simple.js -->
    <rewrite>
      <rules>
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^server-simple.js\/debug[\/]?" />
        </rule>
        <rule name="StaticContent">
          <action type="Rewrite" url="public{REQUEST_URI}" />
        </rule>
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True" />
          </conditions>
          <action type="Rewrite" url="server-simple.js" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- CORS configuration for IIS -->
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization, X-Requested-With" />
        <add name="Access-Control-Allow-Credentials" value="true" />
        <add name="Access-Control-Max-Age" value="86400" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Increase request limits for large audio files -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="2147483648" /> <!-- 2GB -->
      </requestFiltering>
    </security>
    
    <!-- iisnode configuration -->
    <iisnode 
      nodeProcessCommandLine="node"
      loggingEnabled="true"
      logDirectory="iisnode"
      debuggingEnabled="false"
      maxNamedPipeConnectionRetry="24"
      namedPipeConnectionRetryDelay="250"
      enableXFF="false"
      gracefulShutdownTimeout="60000"
      node_env="production"
    />
    
    <!-- Ensure Node.js errors are properly displayed -->
    <httpErrors existingResponse="PassThrough" />
  </system.webServer>
</configuration>